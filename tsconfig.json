{
  "compilerOptions": {
    "outDir": "./dist",
    "importHelpers": true,
    "removeComments": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "coverage", "dist", "**/*.test.ts"],
  "include": ["src/**/*"]
}
